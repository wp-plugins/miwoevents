			<option value="1">COM_MIWOEVENTS_MONDAY</option>
		</field>
		
		<field name="calendar_theme" type="list" default="1" label="COM_MIWOEVENTS_CALENDAR_THEME" description="" >
			<option value="default">COM_MIWOEVENTS_DEFAULT</option>
	        <option value="fire">COM_MIWOEVENTS_FIRE</option>
	        <option value="leaf">COM_MIWOEVENTS_LEAF</option>
	        <option value="sky">COM_MIWOEVENTS_SKY</option>
	        <option value="tree">COM_MIWOEVENTS_TREE</option>
		</field>
		
		<field name="order_events" type="list" default="2" label="COM_MIWOEVENTS_EVENT_ORDER_BY" description="" >
			<option value="1">COM_MIWOEVENTS_ORDERING</option>
	        <option value="2">COM_MIWOEVENTS_EVENT_DATE</option>
		</field>
		
        <field name="button_class" type="text" default="miwoevents_button" label="COM_MIWOEVENTS_BUTTON_CLASS" description="COM_MIWOEVENTS_BUTTON_CLASS_EXPLAIN" ></field>

		<field name="number_categories" type="text" default="7" label="COM_MIWOEVENTS_CATEGORIES_PER_PAGE" description="" ></field>
		
		<field name="number_events" type="text" default="5" label="COM_MIWOEVENTS_EVENTS_PER_PAGE" description="" ></field>
		
		<field name="thumb_width" type="text" default="120" label="COM_MIWOEVENTS_THUMB_WIDTH" description="" ></field>
		
		<field name="thumb_height" type="text" default="120" label="COM_MIWOEVENTS_THUMB_HEIGHT" description="" ></field>
		
