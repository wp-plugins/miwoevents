<?xml version="1.0" encoding="UTF-8" ?>
<config>
	<!-- General -->
	<fieldset name="COM_MIWOEVENTS_GENERAL" label="COM_MIWOEVENTS_GENERAL" description="" addfieldpath="/miwoevents/library/elements">
		<field name="pid" type="password" readonly="true" default="" label="COM_MIWOEVENTS_CONFIG_PERSONAL_ID" description="COM_MIWOEVENTS_CONFIG_PERSONAL_ID_HELP" ></field>
		
		
		<field name="version_checker" type="radio" class="btn-group" default="1" label="COM_MIWOEVENTS_CONFIG_VERSION_CHECKER" description="COM_MIWOEVENTS_CONFIG_VERSION_CHECKER_HELP" >
			<option value="0">MNO</option>
	        <option value="1">MYES</option>
		</field>
		
		<field name="activate_recurring_event" type="radio" class="btn-group" default="0" label="COM_MIWOEVENTS_ACTIVATE_RECURRING_EVENT" description="COM_MIWOEVENTS_ACTIVATE_RECURRING_EVENT_EXPLAIN" >
			<option value="0">MNO</option>
			<option value="1">MYES</option>
		</field>
		
		<field name="hide_past_events" type="radio" class="btn-group" default="0" label="COM_MIWOEVENTS_HIDE_PAST_EVENTS" description="COM_MIWOEVENTS_HIDE_PAST_EVENTS_EXPLAIN" >
			<option value="0">MNO</option>
			<option value="1">MYES</option>
		</field>
		
		<field name="show_db_errors" type="radio" class="btn-group" default="0" label="Show Database Errors" description="" >
			<option value="0">MNO</option>
			<option value="1">MYES</option>
		</field>
		
		<field name="attachment_file_types" type="text" default="bmp|gif|jpg|png|swf|zip|doc|pdf|xls" label="COM_MIWOEVENTS_ATTACHMENT_FILE_TYPES" description="COM_MIWOEVENTS_ATTACHMENT_FILE_TYPES_EXPLAIN" ></field>
		
		<field name="date_format" type="text" default="d-m-Y" label="COM_MIWOEVENTS_DATE_FORMAT" description="COM_MIWOEVENTS_DATE_FORMAT_EXPLAIN" ></field>
		
		<field name="event_date_format" type="text" default="d-m-Y g:i a" label="COM_MIWOEVENTS_EVENT_DATE_FORMAT" description="COM_MIWOEVENTS_EVENT_DATE_FORMAT_EXPLAIN" ></field>
		
		<field name="event_time_format" type="text" default="g:i a" label="COM_MIWOEVENTS_TIME_FORMAT" description="COM_MIWOEVENTS_TIME_FORMAT_EXPLAIN" ></field>
		
		<field name="currency_symbol" type="miwoeventscurrencies" default="$" label="COM_MIWOEVENTS_CURRENCY_SYMBOL" description="" ></field>
		
		<field name="currency_position" type="list" default="0" label="COM_MIWOEVENTS_CURRENCY_POSITION" description="" >
			<option value="0">COM_MIWOEVENTS_BEFORE_AMOUNT</option>
			<option value="1">COM_MIWOEVENTS_AFTER_AMOUNT</option>
		</field>

	</fieldset>
	
	<!-- Frontend -->
	<fieldset name="COM_MIWOEVENTS_FRONTEND" label="COM_MIWOEVENTS_FRONTEND" description="">
        
        <field name="calendar_start_date" type="list" default="1" label="COM_MIWOEVENTS_CALENDAR_START_DATE" description="" >
