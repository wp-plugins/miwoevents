<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>COM_MIWOEVENTS</name>
    <author>Miwisoft LLC</author>
    <creationDate>July 2014</creationDate>
    <authorEmail>info@miwisoft.com</authorEmail>
    <authorUrl>http://miwisoft.com</authorUrl>
    <copyright>2009-2014 Miwisoft LLC</copyright>
    <license>GNU/GPL, http://www.gnu.org/licenses/gpl-2.0.html</license>
    <version>1.2.2</version>
    <description>MiwoEvents offers you an All-in-One platform to create Events (free or paid), Custom Fields (event or registration), Locations (with map) and allows your visitors to Register (individual or group) with and easy to use interface.</description>
    
	<media destination="com_miwoevents" folder="media">
		<folder>images</folder>	
		<filename>index.html</filename>	
	</media>
	
	<languages folder="languages/site">
		<language tag="en-GB">en-GB/en-GB.com_miwoevents.ini</language>
	</languages>
	
	<files folder="site"> 
		<filename>router.php</filename>
		<filename>index.html</filename>
		<filename>miwoevents.php</filename>
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<administration>
		<menu img="components/com_miwoevents/assets/images/icon-16-miwoevents.png">COM_MIWOEVENTS</menu>
		<submenu>
			<menu link="option=com_miwoevents" img="components/com_miwoevents/assets/images/icon-16-miwoevents.png">COM_MIWOEVENTS_PANEL</menu>
			<menu link="option=com_miwoevents&amp;view=fields" img="components/com_miwoevents/assets/images/icon-16-miwoevents-fields.png">COM_MIWOEVENTS_FIELDS</menu>
			<menu link="option=com_miwoevents&amp;view=categories" img="components/com_miwoevents/assets/images/icon-16-miwoevents-categories.png">COM_MIWOEVENTS_CATEGORIES</menu>
            <menu link="option=com_miwoevents&amp;view=locations" img="components/com_miwoevents/assets/images/icon-16-miwoevents-locations.png">COM_MIWOEVENTS_LOCATIONS</menu>
			<menu link="option=com_miwoevents&amp;view=events" img="components/com_miwoevents/assets/images/icon-16-miwoevents.png">COM_MIWOEVENTS_EVENTS</menu>
			<menu link="option=com_miwoevents&amp;view=attenders" img="components/com_miwoevents/assets/images/icon-16-miwoevents-attenders.png">COM_MIWOEVENTS_ATTENDERS</menu>	  		
			<menu link="option=com_miwoevents&amp;view=upgrade" img="components/com_miwoevents/assets/images/icon-16-miwoevents-upgrade.png">COM_MIWOEVENTS_UPGRADE</menu>  			
			<menu link="option=com_miwoevents&amp;view=support&amp;task=support" img="components/com_miwoevents/assets/images/icon-16-miwoevents-support.png">COM_MIWOEVENTS_SUPPORT</menu>
		</submenu> 
		
		<languages folder="languages/admin">     
			<language tag="en-GB">en-GB/en-GB.com_miwoevents.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_miwoevents.sys.ini</language> 
		</languages>
		
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>miwoevents.php</filename>
			<filename>toolbar.php</filename>  
			<folder>assets</folder>
			<folder>controllers</folder>
			<folder>library</folder>	
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>    
	</administration>
	
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	
	<scriptfile>script.php</scriptfile>
</extension>